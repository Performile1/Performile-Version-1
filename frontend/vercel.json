{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".vercel/output/static",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node@3.0.4"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
