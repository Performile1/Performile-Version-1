{
  "framework": null,
  "buildCommand": "npm run build",
  "outputDirectory": "apps/web/dist",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.2.0",
      "maxDuration": 60
    }
  },
  "redirects": [
    {
      "source": "/login",
      "destination": "/#/login",
      "permanent": false
    },
    {
      "source": "/register",
      "destination": "/#/register",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-rankings",
      "schedule": "0 0 * * *"
    }
  ]
}
